<%- include ../partials/header.ejs %>

<main class="container">
    <h1>Articles</h1>

    <a href="/articles/add" title="Add Article">Add a new Article</a>

    <ul class="list-group">
        <% for (var i = 0; i < articles.length; i++) { %>
            <li class="list-group-item">
                <a href="/articles/<%= articles[i]._id %>" title="Read Article">
                    <%= articles[i].title %>
                </a><br />
                <%= articles[i].created.toDateString() %>
            </li>
        <% } %>
    </ul>
</main>

</body>
</html>